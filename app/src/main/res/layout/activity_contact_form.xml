<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/activity_contact_form_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Name"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/activity_contact_form_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Phone Number"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/activity_contact_form_bday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Bday"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/activity_contact_form_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Email"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/activity_contact_form_button"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:text="@string/save"
        android:layout_gravity="center"
        android:backgroundTint="@android:color/holo_green_dark"
        />

</LinearLayout>